<h1>My Tasks</h1>

<ul style="list-style-type: none;">
  <% @tasks.each do |task| %>
    <li style="display: flex; align-items: center;">
      <%= check_box_tag "task.completed_#{task.id}", "1", task.completed %>
      <%= task.title %> <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>
